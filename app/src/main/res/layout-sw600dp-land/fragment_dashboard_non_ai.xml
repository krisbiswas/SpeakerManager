<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/sound_from_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.tut.lifestyle.ui.nonai.SoundFromViewFragment"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/functions_menu_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.tut.lifestyle.ui.nonai.FunctionMenuFragment"/>

    </LinearLayout>
</ScrollView>