<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">
        <ViewStub
            android:id="@+id/stub_dashboard_item_sound_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/item_view_dashboard_menuitem"
            android:inflatedId="@+id/menu_item_sound_mode"
            tools:visibility="visible"
            />
        <ViewStub
            android:id="@+id/stub_dashboard_item_equalizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/item_view_dashboard_menuitem"
            android:inflatedId="@+id/menu_item_equalizer"
            tools:visibility="visible"
            />
        <ViewStub
            android:id="@+id/stub_dashboard_item_woofer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/item_view_dashboard_menuitem"
            android:inflatedId="@+id/menu_item_woofer"
            tools:visibility="visible"
            />
        <ViewStub
            android:id="@+id/stub_dashboard_item_spacefit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/item_view_dashboard_menuitem"
            android:inflatedId="@+id/menu_item_spacefit"
            tools:visibility="visible"
            />
        <ViewStub
            android:id="@+id/stub_dashboard_item_advanced_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout="@layout/item_view_dashboard_menuitem"
            android:inflatedId="@+id/menu_item_advanced_audio"
            tools:visibility="visible"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>