<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:paddingVertical="13dp"
        android:showDividers="middle"
        android:divider="@drawable/divider"
        android:orientation="vertical">
        <include
            android:id="@+id/menu_item_sound_mode"
            layout="@layout/function_menuitem"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <include
            android:id="@+id/menu_item_equalizer"
            layout="@layout/function_menuitem"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <include
            android:id="@+id/menu_item_woofer"
            layout="@layout/function_menuitem"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <include
            android:id="@+id/menu_item_autoeq"
            layout="@layout/function_menuitem"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <include
            android:id="@+id/menu_item_spacefit"
            layout="@layout/switch_menuitem"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <include
            android:id="@+id/menu_item_ava"
            layout="@layout/switch_menuitem"
            android:visibility="gone"
            tools:visibility="visible"
            />
        <include
            android:id="@+id/menu_item_advanced_audio"
            layout="@layout/function_menuitem"
            android:visibility="gone"
            tools:visibility="visible"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>